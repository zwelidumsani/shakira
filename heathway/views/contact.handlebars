  <main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">
        <div class="d-flex justify-content-between align-items-center">
          <h2>{{breadcrumb}}</h2>
          <ol>
            <li><a href="index.html">Home</a></li>
            <li>{{breadcrumb}}</li>
          </ol>
        </div>
      </div>
    </section><!-- End Breadcrumbs -->

    <!-- ======= Contact Section ======= -->
    <div class="map-section">
         <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2889.1546496782034!2d31.37994166519389!3d-26.497916864936464!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1eef4ee9b52f331d%3A0x820138d600af5e26!2sManci%20Shane%20St%2C%20Manzini%2C%20Eswatini!5e0!3m2!1sen!2s!4v1614680843488!5m2!1sen!2s" width="1500" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
    </div>

    <section id="contact" class="contact" style="background: url(assets/img/b1.png);">
      <div class="container">

        <div class="row justify-content-center" data-aos="fade-up">

          <div class="col-lg-10">

            <div class="info-wrap">
              <div class="row">
                <div class="col-lg-4 info">
                  <i class="icofont-google-map"></i>
                  <h4>Location:</h4>
                  <p>Mancishane Street<br>Manzini, M2</p>
                </div>

                <div class="col-lg-4 info mt-4 mt-lg-0">
                  <i class="icofont-envelope"></i>
                  <h4>Email:</h4>
                  <p>heathway@gmail.com
                </div>

                <div class="col-lg-4 info mt-4 mt-lg-0">
                  <i class="icofont-phone"></i>
                  <h4>Call:</h4>
                  <p>+268 2505 3895<br>+268 7806 1010</p>
                </div>
              </div>
            </div>
          </div>
        </div>
		

        <div class="row mt-5 justify-content-center" data-aos="fade-up">
		{{#if getQuote}}
			<div class="section-title">
			  <h2>Request A Quote</strong></h2>
			</div>
		{{/if}}
          <div class="col-lg-10">
		        {{#if emailSuccess}} 
					 <div class = "alert alert-success" alert-dismissable style = "border-radius:4px;>
					     <p class= "pull-right"><button type = "button" class = "close" data-dismiss = "alert" aria-hidden = "true"></button>
					     <i class = "bx bx-message-check"></i>  Email was successfully sent.</p>
					 </div>	
			     {{/if}}
			   
				 {{#if emailError}} 
				     <div class = "alert alert-danger" alert-dismissable style = "border-radius:4px;>
						 <p class= "pull-right"><button type = "button" class = "close" data-dismiss = "alert" aria-hidden = "true"></button>
						 <i class = "bx bxs-message-error"></i>  Could not send email.</p>
					 </div>	
				 {{/if}}
				 
            <form action="/email" method="post" role="form" class="email-form" >
              <div class="row">
                <div class="col-md-6 form-group">
                  <input type="text" name="name" class="form-control" id="name" placeholder="Your Name" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                  <div class="validate"></div>
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                  <input type="email" class="form-control" name="email" id="email" placeholder="Your Email" data-rule="email" data-msg="Please enter a valid email" />
                  <div class="validate"></div>
                </div>
              </div>
              <div class="form-group mt-3">
                <textarea class="form-control" name="message" rows="5" data-rule="required" data-msg="Please write something for us" placeholder="Message"></textarea>
                <div class="validate"></div>
              </div>
              <div class="text-center"><button type="submit" style = "margin-top: 26px;">Send Message</button></div>
            </form>
          </div>
        </div>
      </div>
    </section><!-- End Contact Section -->

  </main><!-- End #main -->